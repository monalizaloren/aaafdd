import React, { useState } from 'react';
import { View, Text, TextInput, TouchableOpacity, StyleSheet, ImageBackground } from 'react-native';
import firebase from 'firebase';

const LoginScreen = ({ navigation }) => {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');

  const handleLogin = () => {
    firebase.auth().signInWithEmailAndPassword(email, password)
      .then((userCredential) => {
        // Autenticação bem-sucedida
        const user = userCredential.user;
        // Navegue para a próxima tela após o login
        navigation.navigate('Home');
      })
      .catch((error) => {
        // Trate os erros de autenticação aqui
        const errorMessage = error.message;
        console.error(errorMessage);
      });
  };

  return (
//utiize o código 'ImageBackground' para colocar uma imagem de fundo, caso queira
    <?
      source={require('../assets/pi.jpg')}
      style={styles.backgroundImage}
    >
      <View style={styles.container}>
        <Text style={styles.title}>Bem-vindo!</Text>
//utilize a tag 'textInput' para criar uma entrada de texto  de email e senha
       ?
//crie um botao que quando ele for clicado acontece a função 'handleLogin'
      ?
          <Text style={styles.buttonText}>Login</Text>
        </TouchableOpacity>
      </View>
    </ImageBackground>
  );
};

const styles = StyleSheet.create({
  backgroundImage: {
    flex: 1,
   width: '100%', // Defina a largura como 100%
    height: '100%', 
    resizeMode: 'cover',
    justifyContent: 'center',
    alignItems: 'center',
  },
  container: {
    backgroundColor: 'rgba(0, 0, 0, 0.6)',
    width: '80%',
    padding: 20,
    borderRadius: 10,
    alignItems: 'center',
  },
  title: {
    fontSize: 24,
    color: 'white',
    marginBottom: 20,
  },
  input: {
    width: '100%',
    height: 40,
    borderWidth: 1,
    borderColor: '#ccc',
    borderRadius: 5,
    marginVertical: 10,
    padding: 10,
    backgroundColor: 'white',
  },
  button: {
    backgroundColor: 'red',
    width: '100%',
    height: 40,
    justifyContent: 'center',
    alignItems: 'center',
    borderRadius: 5,
    marginTop: 10,
  },
  buttonText: {
    color: 'white',
    fontSize: 16,
  },
});

export default LoginScreen;
